<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        android:layout_margin="@dimen/card_margin"
        app:cardElevation="@dimen/card_elevation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="DailyNews"
                android:id="@+id/item_channel_title"
                android:layout_marginBottom="@dimen/title_padding"
                android:layout_marginTop="@dimen/title_padding" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/item_channel_author"
                android:text="Author:高伟男"
                android:layout_gravity="center"
                android:lines="1"
                android:textSize="@dimen/sub_text_size"
                android:textColor="@color/darkgray"

                />

            <TextView
                android:id="@+id/item_channel_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/text_padding"
                android:paddingEnd="@dimen/text_padding"
                android:layout_marginBottom="@dimen/content_margin"
                android:textSize="@dimen/content_text_size"
                android:text="壮壮荒神罪难6速6通关啦！！！还有哪个小伙伴能更厉害的？？？？" />

        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>