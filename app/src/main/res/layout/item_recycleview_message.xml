<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@drawable/ripple"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"
    android:paddingStart="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_circle_head"
        android:layout_width="@dimen/circleradius"
        android:layout_height="@dimen/circleradius"
        android:src="@drawable/lamu" />

    <TextView
        android:id="@+id/message_text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/message_circle_head"
        android:layout_alignTop="@id/message_circle_head"
        android:lines="1"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:paddingTop="8dp"
        android:layout_marginStart="25dp" />

    <TextView
        android:id="@+id/message_text_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/message_text_title"
        android:layout_alignBottom="@id/message_circle_head"
        android:paddingTop="8dp"
        android:textSize="15sp"
        android:layout_marginBottom="8dp"
        android:lines="1" />

</RelativeLayout>